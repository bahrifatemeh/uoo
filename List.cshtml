@model List<StudentModel>

<main>
    <div class="table-response">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">studentFristname</th>
                    <th scope="col">StudentLastname</th>
                    <th scope="col">phonenumber</th>
                    <th scope="col">Email</th>
                    <th scope="col">Age</th>
                    <th scope="col"><a href="/Student/Create"><button type="button" class="btn btn-success">New</button></a></th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.StudentID</th>
                        <td>@item.studentFristname</td>
                        <td>@item.StudentLastname</td>
                        <td>@item.Age</td>
                        <td>@item.phonenumber</td>
                        <td>@item.Email</td>
                        <td>
                            <a href="/Student/Delete/@item.StudentID"><button type="button" class="btn btn-danger">Delete</button></a>
                            <a href="/Student/Edit/@item.StudentID"><button type="button" class="btn btn-warning">Edit</button></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</main>